generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model Person {
  id           Int       @id @default(autoincrement())
  name         String
  age          Int
  email        String    @unique
  hashPassword String    @map("hash_password")
  createdAt    DateTime  @map("created_at")
  updatedAt    DateTime? @map("updated_at")

  @@map("person")
}
